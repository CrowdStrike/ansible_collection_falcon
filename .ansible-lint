---
exclude_paths:
  - molecule
  - ".[dgc]*"
  - ".ansible/collections/"  # Exclude duplicate processing of installed collections
  - "tests/container-env/"  # Exclude container test environment files

enable_list:
  - fqcn-builtins # opt-in

skip_list:
  - "204"
  - "ignore-errors"
  - "var-naming[no-role-prefix]"

warn_list:
  - experimental
